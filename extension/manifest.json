{
  "manifest_version": 3,
  "name": "Vocal Web",
  "version": "0.1.0",
  "description": "Voice-Controlled Assistive Agent browser observer and executor.",
  "permissions": [
    "scripting",
    "activeTab",
    "storage",
    "debugger",
    "webNavigation",
    "downloads",
    "sidePanel"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Vocal Web",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/logo-16.png",
      "48": "assets/logo-48.png",
      "128": "assets/logo-128.png"
    }
  },
  "icons": {
    "16": "assets/logo-16.png",
    "48": "assets/logo-48.png",
    "128": "assets/logo-128.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/url-validator.js", "lib/sensitive-fields.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}
