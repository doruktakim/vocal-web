# Required: API authentication key (generate with: openssl rand -hex 32)
VCAA_API_KEY=

# API server network configuration
# Default host 127.0.0.1 keeps the API loopback-only. Set to 0.0.0.0 ONLY if you trust the network
# and have a firewall in place, and set VCAA_ALLOW_REMOTE=true to acknowledge the risk.
VCAA_API_HOST=127.0.0.1
VCAA_API_PORT=8081
VCAA_ALLOW_REMOTE=false

# Runtime: set to production to enforce TLS and secure defaults
VCAA_ENV=development

# Optional: Allowed CORS origins (comma-separated, e.g., https://app.example.com)
VCAA_ALLOWED_ORIGINS=

# Optional: Override where human recordings are written (default: ~/Documents/VocalWeb/recordings)
VCAA_RECORDINGS_DIR=

# TLS configuration (recommended for any networked deployment)
# Point these at PEM-encoded files. Generate local certs with mkcert or see docs/security/tls-setup.md.
SSL_KEYFILE=
SSL_CERTFILE=

# ASI Cloud configuration
ASI_CLOUD_API_URL=https://inference.asicloud.cudos.org/v1
ASI_CLOUD_API_KEY=
ASI_CLOUD_MODEL=asi1-mini

# Google Speech-to-Text
GOOGLE_APPLICATION_CREDENTIALS=
